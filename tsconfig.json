{
  "compilerOptions": {
    "jsx": "react",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "declarationDir": "dist",
    "declaration": true,
    // "target": "es2015",
    // "module": "es2015",
    "noImplicitAny": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}